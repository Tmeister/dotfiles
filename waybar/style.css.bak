/* Clock styling - inside grouped container */
#clock {
  color: #a9b1d6;
  font-weight: 500;
}

/* CPU styling */
#cpu {
  color: #89dceb;
}

#cpu.warning {
  color: #f9e2af;
}

#cpu.critical {
  color: #f38ba8;
  background: rgba(247, 118, 142, 0.1);
}

/* Memory styling */
#memory {
  color: #a6e3a1;
}

#memory.warning {
  color: #f9e2af;
}

#memory.critical {
  color: #f38ba8;
  background: rgba(247, 118, 142, 0.1);
}

/* Temperature styling */
#temperature {
  color: #fab387;
}

#temperature.critical {
  color: #f38ba8;
  background: rgba(247, 118, 142, 0.1);
}

/* Network styling */
#network {
  color: #cba6f7;
}

#network.disconnected {
  color: #f38ba8;
  background: rgba(247, 118, 142, 0.1);
}

#network.wifi {
  color: #cba6f7;
}

#network.ethernet {
  color: #73daca;
}

/* Bluetooth styling */
#bluetooth {
  color: #74c7ec;
}

#bluetooth.disabled {
  color: #545c7e;
  opacity: 0.5;
}

#bluetooth.connected {
  color: #89dceb;
}

/* PulseAudio styling */
#pulseaudio {
  color: #7aa2f7;
}

#pulseaudio.muted {
  color: #545c7e;
  opacity: 0.5;
}

#pulseaudio.source-muted {
  color: #fab387;
}

/* Battery styling */
#battery {
  color: #a6e3a1;
}

#battery.charging {
  color: #a6e3a1;
}

#battery.warning:not(.charging) {
  color: #f9e2af;
}

#battery.critical:not(.charging) {
  color: #f38ba8;
  background: rgba(247, 118, 142, 0.1);
  animation: blink 0.5s linear infinite alternate;
}

@keyframes blink {
  to {
    background: rgba(247, 118, 142, 0.2);
  }
}

/* Custom modules - inside grouped container */
#custom-omarchy {
  color: #8839ef;
  font-size: 16px;
}

#custom-update {
  color: #fab387;
  animation: pulse-soft 2s infinite;
}

@keyframes pulse-soft {
  0% {
    opacity: 1;
  }
  50% {
    opacity: 0.6;
  }
  100% {
    opacity: 1;
  }
}

/* Tray styling - inside grouped container */
#tray {
  background: transparent;
  /* padding: 4px 6px; */
  /* border-radius: 6px; */
}

#tray:hover {
  background: transparent;
}

#tray > .passive {
  -gtk-icon-effect: dim;
}

#tray > .needs-attention {
  -gtk-icon-effect: highlight;
}

/* Separators between modules */
#custom-separator {
  color: #545c7e;
  padding: 0;
  font-size: 16px;
}

/* Enhanced tooltip styling */
tooltip {
  background: rgba(0, 0, 0, 0.65);
  border: 1px solid rgba(255, 255, 255, 0.15);
  border-radius: 6px;
  padding: 10px 14px;
  box-shadow: 0 0 0 rgba(0, 0, 0, 0);
}

tooltip label {
  color: @foreground;
  font-size: 12px;
}

/* Drawer group styling - no individual borders */
.tray-group-item {
  background: rgba(0, 0, 0, 0.65);
  border: none;
  margin: 0;
}

/* Smooth transitions for all interactive elements */
button:active {
  opacity: 0.85;
}
