@import "../omarchy/current/theme/waybar.css";

/*
* Define Tokyo Night color palette
*/

* {
  border: none;
  border-radius: 0;
  min-height: 0;
  font-size: 12px;
}

window#waybar {
  background: transparent;
  color: @foreground;
  transition: all 0.3s ease;
}

window#waybar.hidden {
  opacity: 0.2;
}

/* macOS-style grouped module containers with wave effects */
.modules-left {
  background-color: transparent;
  background-image: url("file:///home/tmeister/.dotfiles/waybar/wave-right.svg");
  background-repeat: no-repeat;
  background-position: calc(100% + -2px) center;
  background-size: 30px 32px;
  padding-right: 32px;
}

.modules-center {
  background-color: transparent;
  background-image:
    url("file:///home/tmeister/.dotfiles/waybar/wave-left.svg"),
    url("file:///home/tmeister/.dotfiles/waybar/wave-right.svg");
  background-repeat: no-repeat, no-repeat;
  background-position:
    calc(0% - -2px) center,
    calc(100% + -2px) center;
  background-size:
    30px 32px,
    30px 32px;
  padding: 0 32px;
}

.modules-right {
  background-color: transparent;
  background-image: url("file:///home/tmeister/.dotfiles/waybar/wave-left.svg");
  background-repeat: no-repeat;
  background-position: 2px center;
  background-size: 30px 32px;
  padding-left: 32px;
}

/* Workspace styling - inside grouped container */
#workspaces {
  background: rgba(0, 0, 0, 0.65);
  margin: 0;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

#workspaces button {
  background: transparent;
  color: #ef9f76; /* Inactive with app */
  padding: 0 5px;
  margin: 0;
  border-radius: 50%;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  font-size: 16px;
  min-width: 24px;
  min-height: 24px;
}

#workspaces button:hover {
  /* color: #bb9af7; */ /* Tokyo Night purple on hover */
  /* background: rgba(187, 154, 247, 0.15); */
}

#workspaces button.active {
  color: #fe640b;
  background: transparent;
  font-size: 18px;
}

#workspaces button.urgent {
  color: #f7768e; /* Tokyo Night red for urgent */
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0% {
    opacity: 1;
  }
  50% {
    opacity: 0.7;
  }
  100% {
    opacity: 1;
  }
}

#workspaces button.empty {
  color: #8087a2; /* Inactive no app */
  opacity: 1;
}

/* Individual modules - inside grouped containers */
#tray,
#cpu,
#battery,
#network,
#bluetooth,
#pulseaudio,
#clock,
#custom-omarchy,
#custom-update,
#custom-expand-icon,
#memory,
#temperature {
  background: rgba(0, 0, 0, 0.65);
  border: none;
  color: @foreground;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  min-height: 16px;
  margin: 0;
  padding: 0 12px;
}

/* Subtle hover effects for individual modules */
#tray:hover,
#cpu:hover,
#battery:hover,
#network:hover,
#bluetooth:hover,
#pulseaudio:hover,
#custom-omarchy:hover,
#memory:hover,
#temperature:hover {
  background: rgba(0, 0, 0, 1);
  color: @foreground;
}

