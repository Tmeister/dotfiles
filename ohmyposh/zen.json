{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 3,
  "final_space": true,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "blue",
          "style": "plain",
          "template": "<b>Óú≤</b> ",
          "type": "session"
        },
        {
          "foreground": "blue",
          "properties": {
            "style": "folder"
          },
          "style": "plain",
          "template": "<b>{{ .Path }} </b>",
          "type": "path"
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "green",
          "template": "{{ .HEAD }}{{ if .Detached }} DETACHED {{ end }}{{ if or (.Working.Changed) (.Staging.Changed) (.BranchStatus) (gt .StashCount 0) }} [{{ if .Working.Changed }}{{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} | {{ end }}{{ if .Staging.Changed }}{{ .Staging.String }}{{ end }}{{ if and (or (.Working.Changed) (.Staging.Changed)) (or (.BranchStatus) (gt .StashCount 0)) }} {{ end }}{{ if .BranchStatus }}{{ .BranchStatus }}{{ end }}{{ if and (.BranchStatus) (gt .StashCount 0) }} {{ end }}{{ if gt .StashCount 0 }}üì¶{{ .StashCount }}{{ end }}]{{ end }} ",
          "properties": {
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "fetch_bare_info": true,
            "source": "cli",
            "branch_icon": "Ôêò ",
            "branch_ahead_icon": "‚Üë",
            "branch_behind_icon": "‚Üì",
            "branch_identical_icon": "",
            "branch_gone_icon": "",
            "status_formats": {
              "Added": "+%d",
              "Modified": "~%d",
              "Deleted": "-%d",
              "Untracked": "?%d",
              "Unmerged": "!%d"
            }
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": []
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "style": "plain",
          "foreground_templates": [
            "{{if gt .Code 0}}red{{end}}",
            "{{if eq .Code 0}}green{{end}}"
          ],
          "template": "‚ùØ",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ]
}
